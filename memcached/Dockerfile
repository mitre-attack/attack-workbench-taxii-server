FROM memcached

WORKDIR /usr/local/bin/

COPY docker-entrypoint.sh .

EXPOSE 11211:11211

ENV PATH=${PATH}:.

ARG TAXII_CACHE_MAX_ITEM_SIZE=50m
ARG TAXII_CACHE_MEM_SIZE=4096
ENV TAXII_CACHE_MAX_ITEM_SIZE=${TAXII_CACHE_MAX_ITEM_SIZE}
ENV TAXII_CACHE_MEM_SIZE=${TAXII_CACHE_MEM_SIZE}

ENTRYPOINT docker-entrypoint.sh -I ${TAXII_CACHE_MAX_ITEM_SIZE} -m ${TAXII_CACHE_MEM_SIZE}
